EXrMatchNA    <- SearchDT %>% filter(server=="americas" & is.na(status)) %>% select(match_key) %>% slice_sample(n=100) %>% pull()
EXrMatchASIA  <- SearchDT %>% filter(server=="asia"     & is.na(status)) %>% select(match_key) %>% slice_sample(n=100) %>% pull()
